{
    "extends": "@rotundasoftware/eslint-config-rotundasoftware",
    "overrides" : [ {
		"files" : [ "*.js" ],
		"env" : {
            "browser" : true,
			"commonjs" : true,
            "mocha" : false,
            "es6": false,
            "node" : false
        },
        "parserOptions" : {
            "ecmaVersion" : 5,
            "sourceType" : "script"
        }
    },
    {
		"files" : [ "tests/*.js" ],
		"env" : {
            "browser" : false,
            "mocha" : true,
            "es6": false,
            "node" : true
        },
        "parserOptions" : {
            "ecmaVersion" : 5,
            "sourceType" : "script"
        }
	}  ]
}
